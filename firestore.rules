rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para usuarios
    match /usuarios/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para productos
    match /productos/{productId} {
      allow read: if true; // Lectura pública para todos
      allow write, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para categorías
    match /categories/{categoryId} {
      allow read: if true; // Lectura pública para todos
      allow write, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para marcas
    match /brands/{brandId} {
      allow read: if true; // Lectura pública para todos
      allow write, delete: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para órdenes
    match /ordenes/{orderId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para mensajes de contacto
    match /mensajes/{messageId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para configuración
    match /config/{configId} {
      allow read: if true; // Lectura pública
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
